/* 底部导航 */

.tabbar-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 2rpx solid #ccc;
  line-height: 100rpx;
}

.tabbar-container .tab {
  display: inline-block;
  width: 250rpx;
  text-align: center;
  border-right: 2rpx solid #ccc;
  box-sizing: border-box;
}

/* 底部导航的modal */

.modal1 {
