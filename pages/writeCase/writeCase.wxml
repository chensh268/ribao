<!--pages/writeCase/writeCase.wxml-->
<view class="write-container">
  <form bindsubmit="formSubmit">
    <view class="item">
      <text class="left">标题</text>
      <input class="right" placeholder="请输入案例标题" name="title" value='{{title}}'></input>
    </view>
    <view class="item" style="height:270rpx;">
      <text class="left">内容</text>
      <textarea class="right" placeholder="请输入案例内容" name="content" value='{{content}}'></textarea>
    </view>
    <label style="display:flex;justify-content:center;align-items:center;margin-top:80rpx;">
      <button form-type="submit" hidden></button>
      <view class=".button">发布</view>
    </label>
  </form>
</view>