/* pages/myPerformance/myPerformance.wxss */

.return-container {
  height: 1334rpx;
  background-color: #f2f2f2;
}

/* 表格 */

.table-header {
  padding-left: 28rpx;
  /* margin: 20rpx 0; */
  width: 100%;
  height: 70rpx;
  display: flex;
  background-color: #fff;
  line-height: 70rpx;
  /* border:2rpx solid blue; */
}

.table-header view {
  font-size: 28rpx;
  text-align: center;
}

.total {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #ccc;
  font-size: 28rpx;
}

.total text {
  display: inline-block;
  text-align: center;
  font-size: 24rpx;
}

.table-body {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 2rpx solid #ccc;
}

.table-body text {
  display: inline-block;
  font-size: 24rpx;
  width: 110rpx;
  text-align: center;
  box-sizing: border-box;
}
