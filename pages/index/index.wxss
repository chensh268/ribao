/**index.wxss**/

.index-container {
  height: 1334rpx;
  background-color: #f5f5f5;
}
/* 滑动 */

.scroll-menus {
  width:600rpx;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
  border-bottom: 1px solid #eee;
  /* margin-left: 164rpx; */
}

.scroll-menu {
  font-size:28rpx;
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  line-height:60rpx;
  text-align: center;
  border-right: 2rpx solid #eee;
  box-sizing: border-box;
}

.fixed {
  /* display: inline-block; */
  font-size:28rpx;
  padding-top:10rpx;
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  border-right: 2rpx solid #eee;
  background-color: #fff;
}

.header {
  font-size:30rpx;
  background-color: #fff;
}
/* 滑动end */


/* 底部导航 */

.tabbar-container {
  padding: 8rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-top: 2rpx solid #ccc;
  line-height: 80rpx;
  font-size: 28rpx;
}

.tabbar-container .tab {
  display: inline-block;
  width: 187.5rpx;
  text-align: center;
  border-right: 2rpx solid #ccc;
  box-sizing: border-box;
}

.active {
  color: #96f;
}

/* 表格 */

.table-header {
  padding-left: 8rpx;
  margin: 20rpx 0 0 0;
  width: 100%;
  height: 60rpx;
  display: flex;
  font-size: 22rpx;
  background-color: #fff;
  line-height: 60rpx;
  /* border:2rpx solid blue; */
}

.table-header view {
  width:70rpx;
  text-align:center;
  margin-right: 4rpx;
  box-sizing: border-box;
}

.tableActive {
  color: #96f;
}
.table-body{
  /* padding-left: 8rpx; */
  
  width: 100%;
  height: 60rpx;
  /* display: flex; */
  font-size: 22rpx;
  line-height: 60rpx;
  border-bottom:2rpx solid #ccc;
}
.table-body text{
  display:inline-block;
  width:70rpx;
  text-align:center;
  margin-right: 4rpx;
  box-sizing: border-box;
}

