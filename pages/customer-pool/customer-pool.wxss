/* pages/customer-pool/customer-pool.wxss */

.cus-container {
  height: 1334rpx;
  background-color: #f2f2f2;
}

/* 表格 */

.table-header {
  /* padding-left: 18rpx; */
  margin: 20rpx 0 0 0;
  width: 100%;
  height: 60rpx;
  display: flex;
  font-size: 28rpx;
  background-color: #fff;
  line-height: 60rpx;
  /* border:2rpx solid blue; */
}

.table-header view {
  width: 110rpx;
  text-align: center;
}

.table-body {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #ccc;
}

.table-body text {
  /* border:1rpx solid red; */
  display: inline-block;
  width: 110rpx;
  text-align: center;
  font-size: 24rpx;
  box-sizing: border-box;
}
