.cus-container {
  background-color: #f2f2f2;
  height: 1334rpx;
}

.table-header {
  width: 100%;
  height: 60rpx;
  /* display:flex; */
}

.table-header text {
  display: inline-block;
}

.table-body {
  display: flex;
  /* justify-content: space-around; */
  margin-bottom: 30rpx;
}

.left {
  text-align: center;
  /* border:2rpx solid red; */
}

.input {
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 6rpx;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
}

.add-container {
  display: flex;
  float: right;
}

.add-container label {
  margin-right: 40rpx;
}

.button {
  display: block;
  margin: auto;
  margin-top: 100rpx;
  width: 300rpx;
  border-radius: 60rpx;
  padding: 15rpx;
  background: #96f;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}
